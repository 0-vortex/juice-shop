{
    "name": "juice-shop",
    "version": "0.0.0",
    "description": "An intentionally insecure RIA suitable for pen testing and security awareness trainings written in Node, Express and Angular.",
    "author": "Bjoern Kimminich",
    "contributors": ["Bjoern Kimminich"],
    "private": true,

    "keywords": [
        "bodgeit", "owasp", "pentest", "pentesting", "web security", "security", "vulnerable", "vulnerability"
    ],
    "dependencies": {
        "sequelize": "1.7.10",
        "sqlite3": "2.2.7",
        "express": "4.9.3",
        "sequelize-restful": "0.3.0",
        "morgan": "1.3.1",
        "password-hash": "1.2.2"
	},

    "devDependencies": {
        "frisby": "~0.8.3",
        "jasmine-node": "~1.14.5",
        "karma": "~0.12",
        "karma-cli": "0.0.4",
        "karma-junit-reporter": "~0.2",
        "karma-coverage": "~0.2",
        "karma-chrome-launcher": "~0.1",
        "karma-phantomjs-launcher": "~0.1",
        "karma-jasmine": "~0.2.2",
        "http-server": "~0.6",
        "bower": "~1.3",
        "shelljs": "~0.3",
        "win-spawn": "~2.0.0",
        "codeclimate-test-reporter": "~0.0.3",
        "istanbul": "~0.3.2",
        "lcov-result-merger": "1.0.0"
    },

    "repository": {
        "type": "git",
        "url": "https://github.com/bkimminich/juice-shop.git"
    },

    "scripts": {
        "postinstall": "bower install",

        "start": "node app",

        "pretest": "npm install",
        "test": "karma start karma.conf.js && istanbul cover ./test/server-tests.js"
    }
}
